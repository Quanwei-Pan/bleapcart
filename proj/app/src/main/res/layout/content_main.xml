<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/ble_mac"
        android:layout_width="198dp"
        android:layout_height="0dp"
        android:layout_below="@+id/send_hub_mac_button"
        android:layout_toStartOf="@+id/send_hub_mac_button"
        android:hint="@string/edit_ble_mac"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/send_ble_mac_button"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="@+id/send_ble_mac_button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/send_hub_mac_button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/send_hub_mac"
        android:layout_marginStart="2dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/send_ble_mac_button"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tx_response_s"
        android:layout_marginLeft="-13dp" />

    <Button
        android:id="@+id/discon_ble_mac_button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/send_hub_mac_button"
        android:layout_alignTop="@+id/ble_mac"
        android:text="@string/disconnect"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ble_mac"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/ble_mac"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/send_ble_mac_button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/send_hub_mac_button"
        android:layout_alignTop="@+id/ble_mac"
        android:text="@string/send_ble_mac"
        tools:ignore="RtlHardcoded"
        android:layout_marginStart="17dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tx_response_s"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toRightOf="@+id/send_hub_mac_button"
        android:layout_marginLeft="17dp" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:visibility="visible"
        app:srcCompat="@drawable/left02"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="13dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stop"
        android:layout_marginLeft="13dp"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:contentDescription="" />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:visibility="visible"
        app:srcCompat="@drawable/stop01"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintRight_toRightOf="@+id/back"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/back"
        app:layout_constraintHorizontal_bias="1.0"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:visibility="visible"
        app:srcCompat="@drawable/right01"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stop"
        android:layout_marginRight="10dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageButton
        android:id="@+id/ahead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:visibility="visible"
        app:srcCompat="@drawable/ahead01"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/stop"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/stop"
        android:layout_marginBottom="25dp"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:visibility="visible"
        app:srcCompat="@drawable/back01"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tx_ble_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/head_ble_mac"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ble_mac"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/tx_response_s"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="121dp"
        android:text="@string/content_blank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp" />

</android.support.constraint.ConstraintLayout>